<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="CYCLIC" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>logs/requestIntercepting.log</File>
		<rollingPolicy
				class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>
				requestIntercepting.%d{yyyy-MM-dd_HH-mm}.log.zip
			</FileNamePattern>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">

			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>

		</layout>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">

			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>

		</layout>
	</appender>

	<logger name="org.springframework" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="org.hightrax.app" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="org.hightrax.app.config.SpringWebConfig" level="debug">
		<appender-ref ref="CYCLIC" />
	</logger>
	
	<root level="error">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
